<?xml version="1.0"?>
<robot name="myfirst">

  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>

  <link name="base">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.1"/>
      </geometry>
      <origin xyz="0 0 0.05"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.2 0.1"/>
      </geometry>
      <origin xyz="0 0 0.05"/>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1e-3" ixy="0.0" ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3"/>
    </inertial>
  </link>
  <joint name = "base_link1" type="continuous">
    <parent link="base"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.1"/>
    <axis xyz="0 0 1"/>
  </joint>
  <link name="link_1">
    <visual>
      <geometry>
        <box size="0.1 0.1 1"/>
      </geometry>
      <origin xyz="0 0 0.5"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 1"/>
      </geometry>
      <origin xyz="0 0 0.5"/>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1e-3" ixy="0.0" ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3"/>
    </inertial>
  </link>
  <joint name="link1_link2" type="continuous">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0 0 1"/>
    <axis xyz="0 1 0"/>
  </joint>
  <link name="link_2">
    <visual>
      <geometry>
        <box size="0.1 0.1 1"/>
      </geometry>
      <origin xyz="0 0 0.5 "/>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 1"/>
      </geometry>
      <origin xyz="0 0 0.5 "/>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1e-3" ixy="0.0" ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3"/>
    </inertial>
  </link>
  <joint name="link2_link3" type="continuous">
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin xyz="0 0 1"/>
    <axis xyz="0 1 0"/>
  </joint>
  <link name="link_3">
    <visual>
      <geometry>
        <box size="0.1 0.1 1"/>
      </geometry>
      <origin xyz="0 0 0.5"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 1"/>
      </geometry>
      <origin xyz="0 0 0.5"/>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1e-3" ixy="0.0" ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3"/>
    </inertial>
  </link>
</robot>
