<?xml version="1.0"?>
<robot name="myfirst">

  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>

  <link name="base">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.1"/>
      </geometry>
      <origin xyz="0 0 0.05"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.2 0.1"/>
      </geometry>
      <origin xyz="0 0 0.05"/>
    </collision>
  </link>
  <joint name = "base_link1" type="continuous">
    <parent link="base"/>
    <child link="link1"/>
    <origin xyz="0 0 0.1"/>
    <axis xyz="0 0 1"/>
  </joint>
  <link name="link1">
    <visual>
      <geometry>
        <box size="0.1 0.1 1"/>
      </geometry>
      <origin xyz="0 0 0.5"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 1"/>
      </geometry>
      <origin xyz="0 0 0.5"/>
    </collision>
  </link>
  <joint name="link1_link2" type="continuous">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 1"/>
    <axis xyz="0 1 0"/>
  </joint>
  <link name="link2">
    <visual>
      <geometry>
        <box size="0.1 0.1 1"/>
      </geometry>
      <origin xyz="0 0 0.5 "/>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 1"/>
      </geometry>
      <origin xyz="0 0 0.5 "/>
    </collision>
  </link>
  <joint name="link2_link3" type="continuous">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0 0 1"/>
    <axis xyz="0 1 0"/>
  </joint>
  <link name="link3">
    <visual>
      <geometry>
        <box size="0.1 0.1 1"/>
      </geometry>
      <origin xyz="0 0 0.5"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 1"/>
      </geometry>
      <origin xyz="0 0 0.5"/>
    </collision>
  </link>
</robot>
